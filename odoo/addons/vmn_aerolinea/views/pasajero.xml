<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="vmn_aerolinea.pasajero_form" model="ir.ui.view">
            <field name="name">vmn_aerolinea.pasajero.form</field>
            <field name="model">vmn_aerolinea.pasajero</field>
            <field name="arch" type="xml">
                <form string="Pasajero">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="destino"/>
                            <field name="numAsiento"/>
                            <field name="avion_id"/>
                            <field name="maleta_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="peso"/>
                                    <field name="destino"/>
                                    <field name="cabina"/>
                                </tree>
                            </field>
                            <field name="azafata_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="puesto"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        

        <record id="vmn_aerolinea.pasajero_tree" model="ir.ui.view">
            <field name="name">vmn_aerolinea.pasajero.tree</field>
            <field name="model">vmn_aerolinea.pasajero</field>
            <field name="arch" type="xml">
                <tree string="Pasajero">
                    <field name="name"/>
                    <field name="destino"/>
                    <field name="numAsiento"/>
                    <field name="avion_id"/>
                    <field name="maleta_ids"/>
                     <field name="azafata_ids"/>
                </tree>
            </field>
        </record>
        
        <record id="vmn_aerolinea.pasajero_search" model="ir.ui.view">
            <field name="name">Search pasajero</field>
            <field name="model">vmn_aerolinea.pasajero</field>
            <field name="arch" type="xml">
                <search string="Search pasajero">
                    <field name="name"/>
                </search>
            </field>
        </record>
    </data>
</odoo>
