<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="informe_aerolinea_pasajero" model="ir.actions.report">
        <field name="name">Informe de un Pasajero</field>
        <field name="model">vmn_aerolinea.pasajero</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">vmn_aerolinea.informeAerolineaPasajero</field>
        <field name="report_file">vmn_aerolinea.informeAerolineaPasajero</field>
        <field name="binding_model_id" ref="model_vmn_aerolinea_pasajero"/>
        <field name="binding_type">report</field>
    </record>

    <template id="informeAerolineaPasajero">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="pasajero">
                <t t-call="web.basic_layout">
                    <div class="header"></div>
                    <div class="page"></div>
                    <h1 t-field="pasajero.name"/>

                    <div>
                        <strong>Nombre: </strong>
                        <span t-field="pasajero.name"/>
                    </div>

                    <div>
                        <strong>Destino: </strong>
                        <span t-field="pasajero.destino"/>
                    </div>

                    <div>
                        <strong>NÃºmero de Asiento: </strong>
                        <span t-field="pasajero.numAsiento"/>
                    </div>

                    <div class="footer"></div>
                </t>
            </t>
        </t>
    </template>
</odoo>